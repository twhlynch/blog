<script type="module" define:vars={{ id }} is:inline>
	const template = document.getElementById("index-mentioned-" + id);
	const prose = document.getElementById("prose");

	const walker = document.createTreeWalker(
		prose,
		NodeFilter.SHOW_TEXT,
		null,
		false,
	);

	let node;
	while ((node = walker.nextNode())) {
		let text = node.textContent;
		let index;
		while ((index = text.search(/index|idnex/i)) !== -1) {
			const span = document.createElement("span");
			node.before(span); // idk why but i need to use this span

			const match = text.substring(index, index + 5);
			console.log(match);

			const before = document.createTextNode(text.substring(0, index));
			node.textContent = text.substring(index + 5);

			span.before(before);

			const instance = template.content.cloneNode(true);
			span.appendChild(instance);
			const newRefInstance = span.children[0]; // cos its moved i guess
			newRefInstance.children[0].innerText = match.substring(0, 3);
			newRefInstance.children[2].innerText = match.substring(3);

			text = node.textContent;
		}
	}
</script>
<style>
	.index-mentioned {
		position: relative;
		span {
			position: relative;
			opacity: 1;
			transition: opacity 1s;
		}
		svg {
			opacity: 0;
			position: absolute;
			bottom: 0.1em;
			width: 1.3em;
			height: 1.3em;
			transform: translateX(-1em);
			transition: opacity 1s;
		}
		&:hover {
			span {
				opacity: 0;
			}
			svg {
				opacity: 1;
			}
		}
	}
</style>
