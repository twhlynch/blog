---
const id = Math.random().toString(36).slice(2, 11);
---

<div>
	<span id={"read-time-" + id}>0m read</span>
</div>
<script type="module" define:vars={{ id }} is:inline>
	const wordCount = document.body.textContent.split(" ").length || 0;
	const minutes = wordCount / 238;
	document.getElementById("read-time-" + id).textContent =
		minutes < 60
			? `${minutes.toFixed(0)}m read`
			: `${(minutes / 60).toFixed(0)}h ${(minutes % 60).toFixed(0)}m read`;
</script>
<style>
	div {
		font-size: 0.8em;
		display: flex;
		align-items: center;
		padding: 5px 10px;
		border-radius: 15px;
		background-color: var(--layer);
		width: fit-content;
		gap: 0.4em;
	}
</style>
