---
import BaseHead from "@components/BaseHead.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Blogs from "@components/Blogs.astro";
import Tags from "@components/Tags.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "@consts";

import { getCollection } from "astro:content";

const tags = [
	...new Set(
		(await getCollection("blog"))
			.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
			.flatMap((p) => p.data.tags),
	),
].slice(0, 3);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			#intro {
				display: grid;
				grid-template-columns: 1fr auto;
				place-content: center;
				align-items: center;
				justify-content: center;
				padding-bottom: 5em;

				svg {
					transform: rotate(-20deg);
					width: 40%;
					margin-left: auto;
				}
			}
			#tags {
				display: flex;
				gap: 0.5em;
				align-items: center;
				padding-block: 0.4em;

				> a {
					font-size: 0.8em;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section id="intro">
				<div>
					<h1>index's blog</h1>
					<p>Something something blog</p>
				</div>
				<svg
					xmlns="http://www.w3.org/2000/svg"
					viewBox="206.724 121 55.7 95.82"
					stroke-width="1"
					fill="none"
					><path
						d="M229 122 c-8 0-17.5983 13.3526-19.1385 16.5883-1.8297 3.3591.2827 8.9321 2.9362 10.8075-7.7977.6042-4.7977 11.6042-2.7977 12.6042 3 2 18 2 22 2l0 5-9 15c-1 2 2 5 3 3l6.7793-10.9834-.1961 13.3331-7.5832 25.6503c.1407 1.2239 4.8161.91 4.7325.1821l5.2675-17.1821 5 17c.7946 1.2384 4.9169.5936 4.1367-.6095l-6.1367-25.3905 0-13 9 11c2 2 5-1 3-4l-12-14 0-5C247 163 254 164 259 162c2-1 5-9-1.7284-10.6829 1.0798-.0528 1.7284-3.3171 1.7284-7.3171 1-7-4-19-11-22-3 0-6.8074 26.3671-5.2968 27.1407-1.4495.3439-14.8184.3467-16.0388-.0779-.9395-.3769 5.3356-27.0628 2.3356-27.0628z"
						stroke="#fff"></path>
					<path
						class="idnex-eye"
						d="M256.3462 154.3099 c1.6831.5249 2.773 2.8831 1.8879 2.9957-.9946.8085-14.0579.6233-15.3729.3757-1.2785-.3671-1.755-2.1845-.9018-2.6923.8898-.6134 12.5876-1.1443 14.3868-.6791z"
						stroke="#fff"></path>
					<path
						class="idnex-eye"
						d="M229.2583 154.3029 c.8504.5138 1.6589 1.7185.6017 2.5704-1.9146.8865-15.3639 1.18-16.4596.3509-1.2147-.4593-1.5793-2.2854-.9019-2.6924.8392-.4112 15.4311-.36 16.7598-.2289z"
						stroke="#fff"></path>
					<path
						d="M226 126 c3 1-3.1106 22.0469-3.8342 22.8227-.9829.4257-2.9983.3696-4.0652.0348-11.6084-4.2442 5.8994-22.8575 7.8994-22.8575z"
						stroke="#fff"></path>
					<path
						d="M249 128 c-1 2-2.9143 19.8528-2.7419 20.4938-.1069.1147 4.0201 1.4559 6.1048 1.2165 3.5894-.5054 4.6371-13.7103-3.3629-21.7103z"
						stroke="#fff"></path>
				</svg>
				<script type="module" is:inline>
					if (localStorage.getItem("isAdmin")) {
						Array.from(
							document.getElementsByClassName("idnex-eye"),
						).forEach((eye) => {
							eye.setAttribute("stroke", "#0ff");
						});
					}
				</script>
			</section>
			<section id="tags">
				<Tags tags={tags} />
				<a href="/tags">-&gt; all tags</a>
			</section>
			<section id="blogs">
				<Blogs />
			</section>
		</main>
		<Footer />
	</body>
</html>
